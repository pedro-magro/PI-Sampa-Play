<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SobreNosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título da Seção -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sobre Sampa Play"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:contentDescription="Título principal do aplicativo"/>

            <!-- Descrição do Aplicativo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O Sampa Play é o seu aplicativo definitivo para encontrar áreas públicas para fins esportivos e de recreação em São Paulo. Com uma interface intuitiva e recursos de busca avançados, você pode localizar quadras ativas, iluminadas e seguras para sua prática esportiva favorita. Nossa missão é conectar a comunidade esportiva e promover um estilo de vida mais ativo na cidade."
                android:textColor="#212121"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"/>

            <!-- Dados do Projeto (Requisito da Disciplina) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados do Projeto"
                android:textColor="#D50000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desenvolvedor: Pedro Henrique de Lima Simões Magro"
                android:textColor="#212121"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disciplina: Programação Orientada a Dispositivos Móveis"
                android:textColor="#212121"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orientador: Mauricio Ferraz Kubo"
                android:textColor="#212121"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"/>

            <!-- Links de Contato (Requisito da Disciplina) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contatos e Links"
                android:textColor="#D50000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvEmailContato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail: contato@sampaplay.com"
                android:textColor="#D50000"
                android:textSize="14sp"
                android:autoLink="email"
                android:contentDescription="Link de contato por e-mail"/>

            <TextView
                android:id="@+id/tvLinkEquipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LinkedIn: https://www.linkedin.com/in/pedrohlsmagro/"
                android:textColor="#D50000"
                android:textSize="14sp"
                android:autoLink="web"
                android:contentDescription="Link para o LinkedIn da equipe"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
