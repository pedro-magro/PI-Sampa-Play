<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF"
    android:elevation="2dp"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imagemEspaco"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:contentDescription="Imagem do espaço" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/nomeEspaco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da Quadra"
            android:textSize="16sp"
            android:textColor="#212121"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/enderecoEspaco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço Completo"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/cepEspaco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CEP"
            android:textColor="#757575" />
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="end"> <Button
        android:id="@+id/editarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#FFC107" /> <Button
        android:id="@+id/deletarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deletar"
        android:backgroundTint="#D50000" /> </LinearLayout>
</LinearLayout>