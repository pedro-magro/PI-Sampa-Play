<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.ItemDetalheActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarDetalhe"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/details_title"
            app:navigationIcon="@drawable/ic_arrow_back_24dp" /> </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImagens"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/details_image_description" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvDetalheNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    tools:text="Quadra Principal Ibirapuera"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvDetalheStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    tools:text="Categoria: Basquete"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvCondicaoGeral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="@string/details_condition_loading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details_location_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDetalheEndereco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Av. Pedro Álvares Cabral, 0 - Moema, São Paulo"
                    android:textColor="#212121"
                    android:layout_marginBottom="24dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAbrirMaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/details_button_maps"
                    android:contentDescription="@string/details_button_maps_desc"
                    app:icon="@drawable/ic_local_24dp" android:backgroundTint="#03A9F4"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConvidarWhatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/details_button_whatsapp"
                    android:contentDescription="@string/details_button_whatsapp_desc"
                    app:icon="@drawable/ic_sms_24dp" android:backgroundTint="#4CAF50"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_section_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/sampa_red_destaque"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_condition_label"
                    android:textSize="16sp"
                    android:textColor="#212121"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cgCondicao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:singleSelection="true">
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCondicaoBoa"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_option_good"
                        app:chipIcon="@drawable/ic_check_24"
                        app:chipIconTint="@color/feedback_bom" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCondicaoRazoavel"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_option_average"
                        app:chipIcon="@drawable/ic_feedback_ruim_24dp"
                        app:chipIconTint="@color/feedback_razoavel" />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCondicaoRuim"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_option_bad"
                        app:chipIcon="@drawable/ic_error_24dp"
                        app:chipIconTint="@color/feedback_ruim" />
                </com.google.android.material.chip.ChipGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFeedbackObservacao"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/feedback_observation_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFeedbackObservacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:gravity="top" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEnviarFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_button_send"
                    android:contentDescription="@string/feedback_button_send_desc"
                    android:layout_marginTop="16dp"
                    app:icon="@drawable/ic_send_24"
                    app:iconGravity="textStart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_community_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp"
                    android:background="#F5F5F5"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_feedback_card" />

                <TextView
                    android:id="@+id/tvFeedbackVazio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_empty_list"
                    android:textSize="16sp"
                    android:textColor="@color/sampa_cinza_texto"
                    android:layout_marginTop="24dp"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="24dp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>