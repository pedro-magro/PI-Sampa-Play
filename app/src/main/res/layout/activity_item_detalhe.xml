<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ItemDetalheActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetalhe"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F5F5F5"
        android:elevation="4dp"
        app:title="Detalhes do Espaço"
        app:titleTextColor="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarDetalhe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgDetalheEspaco"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Imagem do espaço em destaque"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/tvDetalheNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"
                tools:text="Quadra Principal Ibirapuera"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tvDetalheStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#D50000"
                tools:text="Categoria: Basquete | Aprovado: SIM"
                android:layout_marginBottom="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localização Completa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/tvDetalheEndereco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Av. Pedro Álvares Cabral, 0 - Moema, São Paulo - SP, 04000-000"
                android:textColor="#212121"
                android:layout_marginBottom="24dp"/>
            <Button
                android:id="@+id/btnAbrirMaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abrir no Google Maps"
                android:backgroundTint="#03A9F4"
                android:textColor="@android:color/white"
                android:layout_marginBottom="12dp"/>
            <Button
                android:id="@+id/btnConvidarWhatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convidar Amigos via WhatsApp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deixe seu Feedback"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#D50000"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qual a condição atual?"
                android:textSize="16sp"
                android:textColor="#212121"/>

            <RadioGroup
                android:id="@+id/rgCondicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rbCondicaoBoa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Boa (Pronta para uso)"
                    android:buttonTint="#D50000" />
                <RadioButton
                    android:id="@+id/rbCondicaoRazoavel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Razoável (Precisa de reparos)"
                    android:buttonTint="#D50000" />
                <RadioButton
                    android:id="@+id/rbCondicaoRuim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ruim / Insegura"
                    android:buttonTint="#D50000" />
            </RadioGroup>

            <EditText
                android:id="@+id/etFeedbackObservacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escreva sua observação (opcional)..."
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnEnviarFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar Feedback"
                android:backgroundTint="#D50000"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                app:icon="@drawable/ic_send_24"
                app:iconGravity="textStart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedbacks da Comunidade"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFeedback"
                android:layout_width="match_parent"
                android:layout_height="300dp" tools:listitem="@layout/item_feedback_card"
                android:background="#F5F5F5"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>